<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@android:style/Theme.Holo"
    tools:context=".MainActivity">

    <Spinner
        android:id="@+id/spinner"
        style="@android:style/Widget.Spinner.DropDown"
        android:layout_width="346dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/coinName"
        android:layout_width="359dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="@color/green"
        android:textSize="36sp" />

    <TextView
        android:id="@+id/priceLabel"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/coinName"
        android:layout_marginTop="89dp"
        android:text="Price:"
        android:textColor="@color/black"
        android:textSize="36sp" />

    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/priceLabel"
        android:layout_marginStart="124dp"
        android:text="TextView"
        android:textColor="@color/black"
        android:textSize="36sp" />

    <TextView
        android:id="@+id/priceBTCLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/coinName"
        android:layout_marginTop="147dp"
        android:text="Price (BTC):"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/change24hLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/coinName"
        android:layout_marginTop="179dp"
        android:text="Change (24h):"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/change24h"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/change24hLabel"
        android:layout_marginStart="141dp"
        android:text="TextView"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/priceBTC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/price"
        android:layout_alignTop="@+id/priceBTCLabel"
        android:text="TextView"
        android:textColor="@color/black"
        android:textSize="18sp" />

</RelativeLayout>